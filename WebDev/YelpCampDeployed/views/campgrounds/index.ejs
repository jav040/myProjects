<% include ../partials/header %>


<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to the SOUTH BAY</h1>
			<p>View our community picked spots from the Border up until Downtown San Diego</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">I'd like to add new GEM</a>
			</p>
		</div>
	</header>
	


		    <!--  DISPLAY THE CAMPGROUND IMAGES/TITLES       -->
	<div class="row">
		<div class="col-lg-12">
			<h3>Our most popular spots!</h3>
		</div>
	</div>

	<div class="row" style="display:flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(campground){ %>
		<!-- Shrink to just one image per row when small -->
		<div class="col-md-3 col-sm-6">
		    <div class="thumbmail">
			<img src="<%= campground.image %>" style="width:300px; height:200px;">
			<div class-"caption">
				<h4><%= campground.name %></h4> 
			</div>
			<p>
				<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
			</p>
		    </div>
		</div>
		<% }); %>
	</div>
</div>
<% include ../partials/footer %>
